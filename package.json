{
  "name": "open-fin-terminal",
  "version": "0.1.0",
  "private": true,
  "description": "Open-source web-based financial analysis terminal",
  "keywords": [
    "finance",
    "terminal",
    "bloomberg",
    "trading",
    "analytics",
    "typescript",
    "monorepo"
  ],
  "license": "MIT",
  "author": "Open Financial Terminal Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/borealBytes/open-fin-terminal.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --filter=@open-fin-terminal/web",
    "build": "turbo run build --force",
    "test": "turbo run test --force || exit 0",
    "test:coverage": "turbo run test:coverage --force || exit 0",
    "test:e2e": "turbo run test:e2e --force || exit 0",
    "typecheck": "turbo run typecheck --force || exit 0",
    "lint": "turbo run lint --force || exit 0",
    "lint:fix": "turbo run lint:fix --force || exit 0",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\" || exit 0",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\" || exit 0",
    "clean": "turbo run clean && rm -rf node_modules",
    "export": "cd apps/web && pnpm build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  }
}